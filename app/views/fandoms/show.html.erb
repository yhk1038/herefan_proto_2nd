<style>
    #header.init_header {
        background-color: #2196f3 !important;
        box-shadow: 0px 1px 4px rgba(0, 0, 0, 0.3) !important;
    }
    .carousel-caption:before{
        background-image: url('<%= @fandom.profile_img.include?('round') ? @fandom.profile_img.split('round').first + 'round126_126' : @fandom.profile_img %>')
    }
    #footer{ position: initial }
</style>
<div id="carousel-example-generic" class="channel carousel slide carousel-fade" data-ride="carousel">
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <div class="carousel-img" style="background-image: url('<%= @fandom.background_img %>'); background-attachment: fixed;"></div>
            <div class="carousel-caption">
                <a href="" class="btn btn-default waves-effect waves-circle waves-float"><span class="zmdi zmdi-trending-up"></span></a>
                <a id="channel_<%= @fandom.id %>" onclick="followBtn('<%= @follow_control[:follow_cmd] %>', <%= @follow_control[:myfandom_id] %>, <%= @follow_control[:channel_id] %>, <%= @follow_control[:user_id] %>, 'no-text')" class="btn btn-default waves-effect waves-circle waves-float">
                    <span class="zmdi zmdi-favorite<%= '-outline' unless is_my_fandom?(fandom: @fandom, user: current_user) %> <%= 'c-pink' if is_my_fandom?(fandom: @fandom, user: current_user) %>"></span>
                </a>
                <a href="" class="btn btn-default waves-effect waves-circle waves-float"><span class="zmdi zmdi-share"></span></a>
                <p class="channel_name"><%= @fandom.name %></p>
                <p class="channel_follow_count">followers <span id="follower_count_<%= @fandom.id %>" class="count"><%= @fandom.user_lists.count %></span></p>
            </div>
        </div>
    </div>
</div>

<%= render partial: '/layouts/sub_nav', locals: {tabs: @tabs} %>

<%= render partial: '/layouts/link_section' %>

<% if user_signed_in? && is_my_fandom?(fandom: @fandom, user: current_user) %>
    <button class="btn btn-danger btn-float wave-effect" style="bottom: 50px; right: 3%; position: fixed !important; z-index: 3;"  data-toggle="modal" data-target="#add_link_modal">
        <i class="zmdi zmdi-plus"></i>
    </button>

    <!-- Modal -->
    <%= render '/fandoms/modal_link_upload' %>
<% end %>

<div style="display: none;">
    <p id="notice"><%= notice %></p>

    <p>
        <strong>Name:</strong>
        <%= @fandom.name %>
    </p>

    <p>
        <strong>Profile img:</strong>
        <%= @fandom.profile_img %>
    </p>

    <p>
        <strong>Background img:</strong>
        <%= @fandom.background_img %>
    </p>

    <%= link_to 'Edit', edit_fandom_path(@fandom) %> |
    <%= link_to 'Back', fandoms_path %>
</div>
