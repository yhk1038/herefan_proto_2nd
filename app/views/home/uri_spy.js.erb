var point = $('#card_preview_point');

var dom = '<%= escape_javascript(render '/layouts/link_card', link: @target) %>';
console.log(dom);

point.empty().append(dom);

var url     = '<%== @target[:url].to_s %>';
var title   = '<%= @target[:title].to_s %>';
var desc    = '<%= @target[:description].to_s %>';
var img     = '<%== @target[:image].to_s %>';

$('#link_urls').attr('value', url);
$('#link_title').attr('value', title);
$('#link_description').attr('value', desc);
$('#link_image').attr('value', img);
