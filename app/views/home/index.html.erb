<%= render partial: '/layouts/sub_nav', locals: {tabs: @tabs} %>

<% if user_signed_in? %>
    <% if @fandoms.count.zero? %>
        <section style="text-align: center">
            <h1 style="margin: 40px 0;">There is no content to display .. :(<br>Please check your follow list.</h1>
            <a class="btn btn-default bgm-green btn-lg waves-effect" href="<%= fandoms_path %>">Select Channel</a>
        </section>
    <% else %>
        <% if current_user.links.count.zero? %>
            <section style="text-align: center">
                <h1 style="margin: 40px 0;">Save the link you want to keep<br>and Join your Channel!</h1>
            </section>
        <% else %>
            <%= render partial: '/layouts/link_section' %>
        <% end %>
    <% end %>
<% else %>
    <section style="text-align: center">
        <h1 style="margin: 40px 0;">Oh, have not you joined yet?</h1>
        <a class="btn btn-default bgm-blue btn-lg waves-effect" data-toggle="modal" data-target="#login_modal" style="" href="">Login</a>
    </section>
<% end %>