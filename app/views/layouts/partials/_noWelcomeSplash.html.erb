<div class="login-content" style="display: none;">
    <span class="grl_msg"><%= request.referer.nil? ? 'You Are Reported!!! Please See The Logs of JavaScript Console' : 'You Are Reported!!! Please See The Logs of JavaScript Console' %></span>
    <span class="grl_method">inverse</span>
</div>
<script type="text/javascript" charset="utf-8">
    $(window).load(function () {
        $('html.login-content').removeClass('login-content');

        <% if Rails.env.production? %>
        console.log('Hey Wassup');
        <% end %>

        //Welcome Message (not for login page)
        function notify(message, type){

            <% if Rails.env.production? %>
            console.log('Thank YOU, But Do Not Be A Devil');
            <% end %>

            $.growl({
                message: message
            },{
                type: type,
                allow_dismiss: true,
                label: 'Cancel',
                className: 'btn-xs btn-inverse',
                placement: {
                    from: 'bottom',
                    align: 'center'
                },
                delay: 12048,
                animate: {
                    enter: 'animated bounceIn',
                    exit: 'animated bounceOut'
                },
                offset: {
                    x: 20,
                    y: 85
                }
            });
        }

        if ($('.login-content')[0]) {
            <% if Rails.env.production? %>
            console.log('Are You Interested In Our Site?');
            <% end %>

            if ($('.grl_msg').text() === 'nothing') {
                notify($('.grl_msg').text(), $('.grl_method').text());
            }

            <% if Rails.env.production? %>
            console.log('Hmm. So Are We! The Mail Is "yhkks1038@gmail.com" Contact Us!');
            console.log('Maybe We Wanna Think About Your Employment! COME ON!');
            console.log('-*- HereFan inc -*-');
            <% end %>
        }


    });
</script>