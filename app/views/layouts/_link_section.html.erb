<section id="library" class="container contents_box">
    <div class="row" id="libraries_wrapper">
        <% @links.order(id: :desc).each do |link| %>
            <% user = link.user %>
            <% user ||= User.first %>
            <!--col-md-4 col-sm-3 col-xs-6-->
            <div class="task">
                <div id="link_<%= link.id %>" noiser="<%= user_signed_in? ? current_user.id : '0' %>" class="card blog-post link_wrapping_anchor">
                    <div class="bp-header">
                        <a href="<%= link.url %>" target="_blank">
                            <img style="width: 100%; background: #000;" src="<%= link.image %>" height="171" alt="">
                            <div class="user_profile">
                                <div class="lv-item">
                                    <div class="media">
                                        <div class="pull-left">
                                            <img class="lv-img-sm" src="<%= user.image %>" alt="" data-pin-nopin="true">
                                        </div>
                                        <div class="media-body">
                                            <div class="lv-title"><%= user.nickname %></div>
                                            <small class="lv-small"><%= distance_of_time_in_words(link.created_at.to_time, Time.now) %> before</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <ul class="actions actions-alt moreBtn">
                                <li class="dropdown">
                                    <a href="" data-toggle="dropdown" aria-expanded="false"><i class="zmdi zmdi-more-vert"></i></a>
                                    <ul class="dropdown-menu dropdown-menu-right">
                                        <% if link.user == current_user %>
                                            <li><%= link_to 'edit', edit_link_path(link) %></li>
                                            <li><%= button_to 'Destroy', link, method: :delete, :onclick => "return confirm('Are you sure you want to delete this link?')", class: 'likes_link_to' %><%#= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                                        <% else %>
                                            <li><%= link_to 'report', '#' %></li>
                                        <% end %>
                                    </ul>
                                </li>
                            </ul>
                        </a>
                        <a href="<%= link.url %>" target="_blank" class="bp-title">
                            <h2 class="linkcard-title"><%== link.title %></h2>
                            <small class="linkcard-description"><%== link.description %></small>
                        </a>
                        <button id="dLabel" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="btn bgm-green btn-float waves-effect" style="right: 20px; bottom: -23px;"><i class="zmdi zmdi-share"></i></button>
                        <ul class="dropdown-menu pull-right" role="menu" aria-labelledby="dLabel">

                        </ul>
                    </div>

                    <a href="<%= link.url %>" target="_blank">
                        <div class="p-20">
                            <p class="msg"><%= link.message %></p>
                            <p class="url m-b-0"><%= link.url %></p>
                        </div>
                    </a>
                </div>
            </div>
        <% end %>
    </div>
</section>