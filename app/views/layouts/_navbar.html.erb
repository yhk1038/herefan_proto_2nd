<header id="header" class=" clearfix" data-current-skin="blue">
    <ul class="container header-inner">
        <li id="menu-trigger" data-trigger="#sidebar" class="only-show-xs">
            <div class="line-wrap">
                <div class="line top"></div>
                <div class="line center"></div>
                <div class="line bottom"></div>
            </div>
        </li>

        <li class="logo">
            <%= link_to 'herefan', root_path, class: '' %>
        </li>

        <li class="main_menu hidden-xs">
            <ul class="top-menu font-capital">
                <li class="<%= 'open' if params[:controller] == 'home' %>">
                    <%= link_to 'home', home_my_path %>
                </li>
                <li class="<%= 'open' if params[:controller] == 'fandoms' %>">
                    <%= link_to 'channel', fandoms_path %>
                </li>
            </ul>
        </li>

        <li class="pull-right">
            <ul class="top-menu">
                <li id="top-search">
                    <a href=""><i class="tm-icon zmdi zmdi-search"></i></a>
                </li>

                <li class="dropdown hidden-xs" style="padding: 2px 0">
                    <% if user_signed_in? %>
                        <%= link_to '', data: {toggle: 'dropdown'} do %>
                            <div class="nav_profile" style="background-image: url('<%= current_user.image %>')">
                                <span class="nav_profile-name"><%= current_user.name %> <i class="zmdi zmdi-caret-down"></i></span>
                            </div>
                        <% end %>
                        <div class="dropdown-menu dropdown-menu-lg pull-right" style="width: 80px;">
                            <div class="listview">
                                <div class="lv-body" style="min-height: initial;">
                                    <a class="lv-item" href="<%= edit_user_registration_path %>">
                                        <div class="media">
                                            <div class="media-body">
                                                <div class="lv-title" style="text-align: center; text-transform: capitalize">my page</div>
                                            </div>
                                        </div>
                                    </a>
                                    <div class="lv-item">
                                        <div class="media">
                                            <div class="media-body">
                                                <a class="hf-btn btn-default btn-warning" href="/users/sign_out" style="width: 100%; text-align: center; text-transform: capitalize">logout</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% else %>
                        <%= link_to 'Login', '', class: 'btn btn-default', data: {toggle: 'modal', target: '#login_modal'}, style: 'color: #333333' %>
                    <% end %>
                </li>
            </ul>
        </li>
    </ul>

    <!-- Top Search Content -->
    <div id="top-search-wrap">
        <div class="tsw-inner">
            <i id="top-search-close" class="zmdi zmdi-close"></i>
            <input type="text">
        </div>
    </div>
</header>