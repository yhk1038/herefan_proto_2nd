                    <div class="card-body card-padding" style="padding-top: 0; padding-bottom: 150px;">

                        <div class="row input-feilds">

                            <div class="col-sm-12 text-center">
                                <div id="hf-fileinput" class="fileinput fileinput-new m-b-30 p-0" data-provides="fileinput" style="">
                                    <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="background-image: url('<%= resource.img.nil? ? image_with_sns(resource.image.to_s) : resource.img %>');"></div>
                                    <div>
                                        <span class="btn btn-info btn-file waves-effect hf-fileinput-btn">
                                            <span class="fileinput-new bgm-blue"><i class="zmdi zmdi-camera"></i></span>
                                            <span class="fileinput-exists bgm-green"><i class="zmdi zmdi-camera"></i></span>
                                            <input id="my_profile_img_input" type="file" name="user[image]" value="<%= resource.image.url %>">
                                        </span>
                                        <a href="#" class="btn btn-danger fileinput-exists waves-effect w-100" data-dismiss="fileinput">Remove</a>
                                    </div>
                                </div>
                                <!-- 디버깅 단서로 활용하도록 주석 삭제하지 않고 남겨둠. -->
                                <!-- <p><em>Image preview only works in IE10+, FF3.6+, Safari6.0+, Chrome6.0+ and Opera11.1+. In older browsers the filename is shown instead.</em></p> -->
                            </div>

                            <!--NickName Field-->
                            <div class="col-sm-12" data-contain="nickname">
                                <div class="input-group input-group-lg">
                                    <span class="input-group-addon"><i class="zmdi zmdi-face"></i> Nickname</span>
                                    <div class="fg-line">
                                        <input type="text" name="user[nickname]" id="checkNickNameLength_from" class="form-control input-lg" value="<%= resource.nickname %>">
                                    </div>
                                    <span class="input-group-addon last f-14" style="color: #1bacaa;"><span id="checkNickNameLength_to"><%= resource.nickname.length %></span>/20</span>
                                </div>
                            </div>

                            <div class="col-sm-12" data-contain="horisontal-divider">
                                <p>Personal Info</p>
                            </div>

                            <!--Name Field-->
                            <div class="col-sm-12" data-contain="name">
                                <div class="input-group input-group-lg" style="border-bottom: 0;">
                                    <span class="input-group-addon"><i class="zmdi zmdi-account"></i> Name</span>
                                    <div class="fg-line">
                                        <input type="text" name="user[name]" id="checkNameLength_from" class="form-control input-lg" value="<%= resource.name %>">
                                    </div>
                                    <span class="input-group-addon last f-14" style="color: #1bacaa;"><span id="checkNameLength_to"><%= resource.name.length %></span>/20</span>
                                </div>
                            </div>

                            <!--BirthDay Field-->
                            <div class="col-sm-12" data-contain="birthday">
                                <div class="input-group input-group-lg" style="border-bottom: 0;">
                                    <span class="input-group-addon"><i class="zmdi zmdi-cake"></i> Birthday</span>
                                    <div class="fg-line">
                                        <input type="date" name="user[birthday]" class="form-control input-lg" value="<%= resource.birthday.to_date if resource.birthday %>">
                                    </div>
                                    <!--<span class="input-group-addon last c-blue f-14 btn btn-default bgm-blue waves-effect" style="display: table-cell"></span>-->
                                </div>
                            </div>

                            <!--Email Filed-->
                            <div class="col-sm-12"  data-contain="email">
                                <div class="input-group input-group-lg">
                                    <span class="input-group-addon"><i class="zmdi zmdi-email"></i> Email</span>
                                    <div class="fg-line">
                                        <input type="text" name="user[email]" class="form-control input-lg" value="<%= resource.email %>">
                                    </div>
                                    <!--<span class="input-group-addon last c-blue f-14 btn btn-default bgm-blue waves-effect" style="display: table-cell"></span>-->
                                </div>
                            </div>

                            <div class="col-sm-12" data-contain="submit">
                                <%= link_to "Go Back", mypage_watched_path, class: 'hf-btn btn-info w-100 submiter', style: 'box-shadow: 0 1px 1px rgba(0, 0, 0, 0.15); margin-top: 50px !important;' %>
                                <button type="submit" onclick="return account_validation();" class="card hf-btn btn-primary w-100 m-t-15 m-b-30 submiter" style="box-shadow: 0 1px 1px rgba(0, 0, 0, 0.15);">Update</button>
                            </div>

                            <div class="col-sm-12">
                                <div style="margin-top: 60px; padding-left: 20px;">
                                    <p style="font-size: 18px;color: #f5146c;font-weight: 600;">Delete Account?</p>
                                    <p class="m-b-30" style="font-size: 16px;color: #b3b3b3;font-weight: 400;">To protect your information, your account will be retained for two months even if you delete it.</p>
                                    <%= link_to "delete my account", user_inactivate_path, class: 'hf-btn btn-sm', style: 'box-shadow: none;color: #f5146c;text-transform: capitalize;padding: 0; font-size: 16px; background: none;', onclick: "return confirm('Are you sure?')" %>
                                </div>
                            </div>

                        </div>

                    </div>
