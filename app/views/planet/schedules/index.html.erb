<p id="notice"><%= notice %></p>

<h1>Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Fandom</th>
      <th>Category</th>
      <th>Title</th>
      <th>Content</th>
      <th>Event start</th>
      <th>Event end</th>
      <th>Url</th>
      <th>Class name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.fandom %></td>
        <td><%= schedule.category %></td>
        <td><%= schedule.title %></td>
        <td><%= schedule.content %></td>
        <td><%= schedule.event_start %></td>
        <td><%= schedule.event_end %></td>
        <td><%= schedule.url %></td>
        <td><%= schedule.class_name %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

