<p id="notice"><%= notice %></p>

<h1>Myfandoms</h1>

<table>
  <thead>
    <tr>
      <th>Fandom</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @myfandoms.each do |myfandom| %>
      <tr>
        <td><%= myfandom.fandom %></td>
        <td><%= myfandom.user %></td>
        <td><%= link_to 'Show', myfandom %></td>
        <td><%= link_to 'Edit', edit_myfandom_path(myfandom) %></td>
        <td><%= link_to 'Destroy', myfandom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Myfandom', new_myfandom_path %>
